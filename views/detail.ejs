    <script>
        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);
        const _id = urlParams.get("_id");

        function show_modal() {

            $('.modal').addClass('show');
        }
        function close_modal() {

            $('.modal').removeClass('show');
        }

        $(document).ready(function () {
            get_detail()
        })

        function get_detail() {
            $.ajax({
                type: "GET",
                url: `/api/posts/${_id}`,
                data: {},
                success: function (response) {
                    let post = response["detail"]
                    console.log(post)
                    make_detail(post)


                }
            })
        }

        function make_detail(item) {
            let htmlTemp = `<div class="control">
                                <input class="input" type="text" value="${item["title"]}" readonly>
                            </div>
                            <div class="control">
                                <input class="input" type="text" value="${item["user_id"]}" readonly>
                            </div>

                            <div class="control">
                                <textarea class="textarea" readonly>${item["content"]}</textarea>
                            </div>
                            <br>
                            <div class="field is-grouped is-grouped-right">
                                <p class="control">
                                    <a class="button is-primary" id="modal_btn" onclick="show_modal()">
                                        수정/삭제
                                    </a>
                                </p>
                                <p class="control">
                                    <a class="button is-light" onclick="location.href='/'">
                                        Cancel
                                    </a>
                                </p>
                            </div>`
            $("#post_detail").append(htmlTemp)
        }

        function correction() {
            $.ajax({
                type: "POST",
                url: `api/detail/${_id}`,
                data: {
                    passWord: $("#passWord").val(),
                },
                success: function (response) {
                    if (response["msg"] == "success") {
                        window.location.href = `/posts/correction?_id=${_id}`
                    } else {
                        alert("비밀번호를 확인해주세요!")

                    }
                }
            });



        }
    </script>

