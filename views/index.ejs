        function time2str(date) {
            let today = new Date()
            let time = (today - date) / 1000 / 60  // 분

            if (time < 60) {
                return parseInt(time) + "분 전"
            }
            time = time / 60  // 시간
            if (time < 24) {
                return parseInt(time) + "시간 전"
            }
            time = time / 24
            if (time < 7) {
                return parseInt(time) + "일 전"
            }
            return `${date.getFullYear()}년 ${date.getMonth() + 1}월 ${date.getDate()}일`
        }

        function get_posts() {
            $("#postsList").empty()
            // console.log(title)
            $.ajax({
                type: "GET",
                url: "/api/posts",
                data: {},
                success: function (response) {
                    let posts = response["posts"]
                    
                    for (let i = 0; i < posts.length; i++) {
                        make_post(posts[i])
                        
                    }
                }
            })
        }

        function make_post(item) {
            let htmlTemp = `<div class="columns post_board" onclick="location.href='/detail?postsId=${item["_id"]}'">
                                <div class="column is-narrow">
                                    <div class="box" style="width: 200px;">
                                        <p class="title is-5">${item["usr_id"]}</p>
                                        <p class="subtitle">${item["date"]}</p>
                                    </div>
                                </div>
                                <div class="column">
                                    <div class="box">
                                        <p class="title is-5" id="title">${item["title"]}</p>
                                        <p class="subtitle">"${item["content"]},${item["passWord"]}"</p>
                                    </div>
                                </div>
                            </div>`
            $("#postsList").append(htmlTemp)
        }
