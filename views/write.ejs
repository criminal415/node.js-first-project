    <script>
        function show_modal() {

            $('.modal').addClass('show');
        }
        function close_modal() {

            $('.modal').removeClass('show');
        }
        function add_close() {
            addpost();
            close_modal();
        }

        function addpost() {

            $.ajax({
                type: "POST",
                url: "/api/posts",
                data: {
                    title: $("#title").val(),
                    user_id: $("#user_id").val(),
                    content: $("#content").val(),
                    passWord: $("#passWord").val(),
                },
                error: function (xhr, status, error) {
                    if (status == 400) {
                        alert("모두 입력해주세요");
                    }
                    window.location.href = "/";
                },
                success: function (response) {
                    if (response["result"] == "success") {
                        alert("저장 완료!");
                        window.location.href = "/";
                    }
                }
            });
        }
    </script>

